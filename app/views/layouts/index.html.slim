      .active_news.center#news
        = image_tag("index/active_news.png")

      - news = News.order("id desc").limit(3)
      #news_image.carousel.slide
        .carousel-inner[role="listbox"]
          - news.each_with_index do |new, i|
            .item class="#{i == 1 and 'active'}" data-content="#tab#{i}"
              img src=new.image.url
        ol.carousel-indicators
          li[data-target="#news_image" data-slide-to="0"]
          li.active[data-target="#news_image" data-slide-to="1"]
          li[data-target="#news_image" data-slide-to="2"]
        ul.nav.nav-tabs.hidden role='tablist'
          - news.each_with_index do |new, i|
            li role="presentation" class="#{i == 1 and 'active'}"
              a href="#tab_content#{i}" role="tab" data-toggle="tab" id="tab#{i}"
                = new.title
        .tab-content
          - news.each_with_index do |new, i|
            .tab-pane role="tabpanel" class="#{i == 1 and 'active'}" id="tab_content#{i}"
              = new.content
