          = simple_form_for(Apply.new, wrapper: 'no_label') do |f|
            .form-inputs.center
              = f.input :name, placeholder: "姓名"
              = f.input :phone, placeholder: "电话"
            .form-actions
              = f.button :submit, "提交"
